<% if user_signed_in? %>
    <h3>Welcome <%= current_user.email %> </h3>
    <%= link_to 'Edit Profile', edit_user_registration_path %>
    <%= link_to 'View All Cars', cars_path %>
    <% if is_user_admin_or_superadmin? %>
        <%= link_to 'View Users', users_index_path %>
        <%= link_to 'Create Admin', users_new_path %>
    <% else %>
        <%= link_to 'View Active Reservations', reservations_path %>
    <% end %>
<% else %>
    <h1>
      Welcome to the Car Rental App
    </h1>
    <%= link_to 'Login', new_user_session_path %>
    <%= link_to 'Sign Up', new_user_registration_path %>
<% end %>